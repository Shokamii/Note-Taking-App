{
    "manifest_version": 3,
    "name": "Quick Note Taker",
    "version": "1.0",
    "description": "Store, delete, and check notes.",
    "permissions": [
        "storage"
    ],
    "action": {
        "default_icon": {
            "48": "images/icon48.png"
        },
        "default_popup": "popup.html",
        "default_title": "Quick Note Taker"
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": ["popup.html", "popup.js", "popup.css"],
            "matches": ["<all_urls>"]
        }
    ]
}
